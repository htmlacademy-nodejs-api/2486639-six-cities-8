{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "./src/main.cli.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon --exec npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "start:cli": "npm run build && node ./dist/main.cli.js",
    "start:cli:dev": "nodemon --exec npm run ts ./src/main.cli.ts",
    "start:cli:dev:version": "npm run start:cli:dev -- -- -- --version",
    "start:cli:dev:help": "npm run start:cli:dev -- -- -- --help",
    "start:cli:dev:none": "npm run start:cli:dev -- -- -- --none",
    "start:cli:dev:import": "npm run start:cli:dev -- -- -- --import ./mocks/offers.tsv admin test localhost 27017 six-cities abcdefg",
    "start:cli:dev:generate": "npm run start:cli:dev -- -- -- --generate 10 ./mocks/offers.tsv http://localhost:3123/api",
    "build": "npm run clean && npm run compile",
    "lint": "tsc --noEmit && eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "compile": "tsc",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/express": "4.17.21",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.3",
    "nodemon": "3.1.7",
    "pino-pretty": "11.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.4.0",
    "class-transformer": "0.5.1",
    "chalk": "5.3.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.10",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-handler": "1.2.0",
    "got": "14.2.1",
    "http-status-codes": "2.3.0",
    "inversify": "6.0.2",
    "mongoose": "8.3.4",
    "pino": "9.0.0",
    "reflect-metadata": "0.2.2"
  }
}
